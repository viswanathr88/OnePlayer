<Page x:Class="OnePlayer.UWP.Pages.FirstRunExperiencePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:OnePlayer.UWP.Pages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#506658"
      DataContext="{Binding Source={StaticResource VMLocator}, Path=FirstRunExperience}">

    <RelativePanel>
        <Image x:Name="SplashImage"
               Source="/Assets/SplashScreen.png"
               Stretch="None"
               RelativePanel.AlignHorizontalCenterWithPanel="True"
               RelativePanel.AlignVerticalCenterWithPanel="True"/>

        <TextBlock x:Uid="LoginDescription"
                   x:Name="LoginDescription"
                   Text=""
                   Foreground="White"
                   Style="{StaticResource BaseTextBlockStyle}"
                   RelativePanel.Below="SplashImage"
                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                   Margin="0,0,0,20"
                   Visibility="{x:Bind ViewModel.LoginRequired, FallbackValue=Collapsed}"/>

        <Button x:Uid="LoginButton"
                x:Name="LoginButton"
                Content=""
                RelativePanel.Below="LoginDescription"
                Foreground="White"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Click="LoginButton_Click"
                Visibility="{x:Bind ViewModel.LoginRequired, FallbackValue=Collapsed}"/>


    </RelativePanel>
</Page>
