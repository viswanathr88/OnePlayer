<ContentDialog x:Class="Riff.UWP.Controls.AddPlaylistDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:Riff.UWP.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="New playlist"
               PrimaryButtonText="Create playlist"
               PrimaryButtonCommand="{x:Bind ViewModel.Add}"
               PrimaryButtonCommandParameter="{x:Bind ViewModel.PlaylistName, Mode=OneWay}"
               CloseButtonText="Cancel"
               DefaultButton="Primary">

    <Grid>
        <TextBox x:Name="NewPlaylistTextBox"
                 Text="{x:Bind ViewModel.PlaylistName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 PlaceholderText="Name your new playlist"/>
    </Grid>
</ContentDialog>
